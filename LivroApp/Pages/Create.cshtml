@page
@model LivroApp.Pages.CreateModel
@{
    ViewData["Title"] = "Adicionar Livro";
}
<h1>Adicionar Livro</h1>
<form method="post">
  <div class="form-group">
    <label for="Titulo">Título</label>
    <input type="text" id="Titulo" name="Livro.Titulo" class="form-control" required />
    </div>
 <div class="form-group">
     <label for="Autor">Autor</label>
     <input type="text" id="Autor" name="Livro.Autor" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
