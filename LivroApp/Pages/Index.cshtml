@page
@model LivroApp.Pages.IndexModel
@{
    ViewData["Title"] = "Lista de Livros";
}
<h1>Lista de Livros</h1>
<a asp-page="/Create">Adicionar Novo Livro</a>

<table class="table">
<thead>
  <tr>
     <th>Título</th>
     <th>Autor</th>
     <th>Ações</th>
    </tr>
  </thead>
 <tbody>
  @foreach (var livro in Model.Livros)
  {
<tr>
   <td>@livro.Titulo</td>
   <td>@livro.Autor</td>
  <td>
<form method="post" asp-page-handler="Delete" asp-route-id="@livro.Id">
 <button type="submit" class="btn btn-danger">Deletar</button>
</form>
</td>
</tr>
 }
    </tbody>
</table>
